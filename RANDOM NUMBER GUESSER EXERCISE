import java.util.Scanner;
import java.util.Random;

public class guessthenumber {
    public static void main(String[] args) {
        Scanner shesh = new Scanner(System.in);
        Random ranNum = new Random();
        System.out.println("Guess the Number Between 1-100\nTo Start Input Y\nTo Exit Game, Input N");
        int Rightnumber = ranNum.nextInt(100) + 1;
        String start = shesh.next();
        int number=0;
        int attempts=0;
        while (start.equalsIgnoreCase("Y")) {
            attempts++;
            int limit=10;
            int RemainingAtempts= limit-=attempts;
            System.out.println("Input Number Here: ");
          
            number = shesh.nextInt();
     
            if (number > Rightnumber) {
                System.out.println("THE NUMBER YOU ENTERED IS TOO HIGH, TRY AGAIN\nRemaining Attempts: "+RemainingAtempts);
                continue;
            }
            if (number < Rightnumber) {
                System.out.println("THE NUMBER YOU ENTERED IS TOO LOW, TRY AGAIN\nRemaining Attempts: "+RemainingAtempts);
             continue;
            }
            if (RemainingAtempts==10){System.out.println("You Failed To Guess The Number!"); break;}
            
           
            if (number == Rightnumber) {
                System.out.println("You Are Correct: " + Rightnumber+"\nAttempts: "+attempts); break;
            } 
            
        }
    }
}

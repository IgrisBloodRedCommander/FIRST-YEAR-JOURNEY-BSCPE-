package test.ai;

import java.util.Scanner;

/**
 *
 * @author User
 */
public class TestAi {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner i = new Scanner(System.in);

        String name = "";

        // Ask for the user's name
        while (name.isBlank()) {
            System.out.println("Input Your Name Before You Enter Our Shop:");
            name = i.nextLine();
        }

        // Greet based on the user's name
        if (name.equalsIgnoreCase("Voldemort")) {
            System.out.println("HE WHO MUST NOT BE NAMED! Welcome..I guess, To Hogwarts' Bookstore. \nINPUT ANY SPELL TO PROCEED:");
        } else {
            System.out.println("Welcome to Hogwarts' Bookstore, " + name + "!\nINPUT ANY SPELL TO PROCEED:");
        }

        String spell3 = i.nextLine().toLowerCase();

        switch (spell3) {
            case "crucio":
            case "avada kedavra":
            case "imperio":
                System.out.println("Woah, " + name + ". AN UNFORGIVABLE SPELL! Anyways here's the list of the books:");
                break;
            default:
                System.out.println("Woah, " + name + ". NICE SPELL YOU GOT THERE! Anyways here's the list of the books:");
                break;
        }

        // Book prices
        int book1 = 800, book2 = 950, book3 = 750, book4 = 500, book5 = 750, book6 = 820, book7 = 1200;

        // Variable to store total cost
        int total = 0;
        boolean keepShopping = true;

        // Main loop to keep selecting books and adding up to the total
        while (keepShopping) {
            // Display books
            System.out.println("Book 1: Harry Potter and the Sorcerer's Stone\nPrice: Php " + book1);
            System.out.println("Book 2: Harry Potter and the Chamber of Secrets\nPrice: Php " + book2);
            System.out.println("Book 3: Harry Potter and the Prisoner of Azkaban\nPrice: Php " + book3);
            System.out.println("Book 4: Harry Potter and the Goblet of Fire\nPrice: Php " + book4);
            System.out.println("Book 5: Harry Potter and the Order of the Phoenix\nPrice: Php " + book5);
            System.out.println("Book 6: Harry Potter and the Half-Blood Prince\nPrice: Php " + book6);
            System.out.println("Book 7: Harry Potter and the Deathly Hallows\nPrice: Php " + book7);

            // Ask the user to choose a book
            System.out.println("CHOOSE A BOOK ACCORDING TO ITS NUMBER (1-7):");
            int choose = i.nextInt();

            int bookPrice = 0;
            switch (choose) {
                case 1:
                    bookPrice = book1;
                    System.out.println("You've chosen: Harry Potter and the Sorcerer's Stone");
                    break;
                case 2:
                    bookPrice = book2;
                    System.out.println("You've chosen: Harry Potter and the Chamber of Secrets");
                    break;
                case 3:
                    bookPrice = book3;
                    System.out.println("You've chosen: Harry Potter and the Prisoner of Azkaban");
                    break;
                case 4:
                    bookPrice = book4;
                    System.out.println("You've chosen: Harry Potter and the Goblet of Fire");
                    break;
                case 5:
                    bookPrice = book5;
                    System.out.println("You've chosen: Harry Potter and the Order of the Phoenix");
                    break;
                case 6:
                    bookPrice = book6;
                    System.out.println("You've chosen: Harry Potter and the Half-Blood Prince");
                    break;
                case 7:
                    bookPrice = book7;
                    System.out.println("You've chosen: Harry Potter and the Deathly Hallows");
                    break;
                default:
                    System.out.println("INVALID INPUT: CHOOSE ONLY FROM '1-7'");
                    continue;
            }

            // Ask for the quantity
            System.out.println("QUANTITY [MAX: 5]:");
            int quantity = i.nextInt();
            if (quantity < 1 || quantity > 5) {
                System.out.println("INVALID QUANTITY, PLEASE TRY AGAIN");
                continue;
            }

            // Add the selected book's price to the total
            total += bookPrice * quantity;
            System.out.println("This is your current total: Php " + total);

            // Ask if they want to buy another book
            System.out.println("Do you want to add another book?\nInput '1' for Yes, '0' for No:");
            int addAnother = i.nextInt();
            if (addAnother == 0) {
                keepShopping = false;
            }
        }

        // Checkout process
        System.out.println("Final total cost: Php " + total);
        System.out.println("Input Cash: ");
        int cash = i.nextInt();

        if (cash < total) {
            System.out.println("INSUFFICIENT CASH, Transaction failed."); 
        } else {
            int change = cash - total;
            System.out.println("Payment Successful. Your change is Php " + change);
            System.out.println("Thank you for shopping at Hogwarts' Bookstore, " + name + "!");
        }

        i.close();
    }
}
    
    

